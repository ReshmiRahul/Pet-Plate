@model PetAdoption.Models.ViewModels.MenuItemDetails

<h1>Menu Item Details</h1>

<div>
    <h2>@Model.MenuItem.Name</h2>
    <p>Price: @Model.MenuItem.Price.ToString("C")</p>
</div>

@if (Model.AssociatedFoodTruck != null)
{
    <div>
        <h3>Associated Food Truck</h3>
        <p>Name: @Model.AssociatedFoodTruck.Name</p>
        <p>Description: @Model.AssociatedFoodTruck.Description</p>
        <p>Contact: @Model.AssociatedFoodTruck.Contact</p>
        <p>Location Address: @Model.AssociatedFoodTruck.LocationAddress</p>
    </div>
}
else
{
    <p>No associated food truck found for this menu item.</p>
}
